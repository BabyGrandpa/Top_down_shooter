function cwall(obj,aim,flag)
	
	if btnp(⬅️) or btnp(➡️) or btnp(⬇️) or btnp(⬆️) then
	 aimx1=(x-8)/8
	 aimx2=(x-1)/8
		aimy1=(y)/8
		aimy2=(y+8)/8
	end
	
	if btnp(➡️) then
		aimx1=(x+8)/8	
		aimx2=(x+8+1)/8	
		aimy1=(y)/8
		aimy2=(y+8-1)/8
	
	elseif btnp(⬆️) then
		aimx1=(x+1)/8
		aimx2=(x+8-1)/8
		aimy1=(y-1)/8
		aimy2=(y-8)/8
	
	elseif btnp(⬇️) then
		aimx1=(x)/8
		aimx2=(x+8)/8	
		aimy1=(y+1)/8
		aimy2=(y+8)/8
	end

--pixels to tiles
--	aimx1/=8		
--	aimy1/=8
--	aimx2/=8  
	
	if fget(mget(aimx1,aimy1),0)
	or fget(mget(aimx1,aimy2),0)
	or fget(mget(aimx2,aimy1),0)
	or fget(mget(aimx2,aimy2),0) then
		return true
	else 
		return false
	end


end
